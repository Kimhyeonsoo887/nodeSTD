<h2>{{title}}</h2>

<div>
    <table>
        <thead>
            <tr>
                <th width="50%">제목</th>
                <th>작성자</th>
                <th>조회수</th>
                <th> 등록일</th>
            </tr>
        </thead>

        <tbody>
            {{#each posts}}
            <tr>
                <td><a htef="/detail/{{_id}}">{{title}}</a></td>
                <td>{{writer}}</td>
                <td>{{hits}}</td>
                <td>{{dataString createDt}}</td>
                <td></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div>
    {{#with paginator}}
    <a href="/?page=1&search={{@root.search}}">&lt;&lt;</a>
    {{#if hasPrev}}

    <a href="/?page={{prevPage}}&search={{@root.search}}">&lt;</a>
    {{else}}
    <a>&lt;</a>
    {{/if}}
    {{#each pageList}}
    {{#if (eq . @root.paginator.page)}}
    <a>{{.}}</a>
    {{else}}
    <a href="/?page{{.}}&search={{@root.search}}">{{.}}</a>
    {{if}}
    {{/each}}
    {{#if hasNext}}
    <a href="/?page={{.}}&search={{@root.search}}">&gt;</a>
    {{else}}
    <a>&gt;</a>
    {{/if}}
    <a href="/?page={{lastPage}}&search={{@root.search}}">&gt;&gt;</a>
    {{/with}}
</div>
